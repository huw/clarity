<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/horizontal_margin"
    android:paddingStart="@dimen/horizontal_margin">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/primary_text_light"
        android:textSize="@dimen/subhead_size"
        tools:text="Clarity (For OmniFocus)"/>

    <TextView
        android:id="@+id/remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/disabled_text_light"
        android:textSize="@dimen/body1_size"
        tools:text="87 remaining"/>

    <include
        android:id="@+id/divider_due_soon"
        layout="@layout/dot_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/remaining"
        android:layout_marginLeft="@dimen/dot_divider_margin"
        android:layout_marginRight="@dimen/dot_divider_margin"
        android:layout_toEndOf="@id/remaining"
        android:layout_toRightOf="@id/remaining"/>

    <TextView
        android:id="@+id/due_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/divider_due_soon"
        android:layout_toEndOf="@id/divider_due_soon"
        android:layout_toRightOf="@id/divider_due_soon"
        android:background="@drawable/background_due_soon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/foreground_due_soon"
        android:textSize="@dimen/body1_size"
        tools:text="2 due soon"/>

    <include
        android:id="@+id/divider_overdue"
        layout="@layout/dot_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/due_soon"
        android:layout_marginLeft="@dimen/dot_divider_margin"
        android:layout_marginRight="@dimen/dot_divider_margin"
        android:layout_toEndOf="@id/due_soon"
        android:layout_toRightOf="@id/due_soon"/>

    <TextView
        android:id="@+id/overdue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/divider_overdue"
        android:layout_toEndOf="@id/divider_overdue"
        android:layout_toRightOf="@id/divider_overdue"
        android:background="@drawable/background_overdue"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/foreground_overdue"
        android:textSize="@dimen/body1_size"
        tools:text="1 overdue"/>

</RelativeLayout>