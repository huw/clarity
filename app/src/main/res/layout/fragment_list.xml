<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:name="nu.huw.clarity.ui.fragments.EntryFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:scrollbars="vertical"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.fragment.ListFragment"
            tools:listitem="@layout/fragment_task"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/empty_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/horizontal_margin"
            android:contentDescription="@string/empty_title"
            android:src="@drawable/empty_check"/>

        <TextView
            android:id="@+id/empty_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_image"
            android:layout_centerHorizontal="true"
            android:text="@string/empty_title"
            android:textColor="@color/disabled_text_light"
            android:textSize="@dimen/headline_size"/>

        <TextView
            android:id="@+id/empty_subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_headline"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/empty_congratulations"
            android:textColor="@color/disabled_text_light"
            android:textSize="@dimen/subhead_size"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/list_progress"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout>
