<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:buttonStyle">@style/ColouredButton</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- This isn't strictly necessary on lollipop and above, but I'm making
    the call to be consistent here -->
    <style name="ColouredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>