<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/primary</item>
    <item name="colorButtonNormal">@color/primary</item>
    <item name="android:textColorPrimary">@color/primary_text_light</item>
    <item name="android:textColorSecondary">@color/secondary_text_light</item>
    <item name="android:textColorTertiary">@color/disabled_text_light</item>
    <item name="android:dialogTheme">@style/Theme.AppTheme.Dialog</item>
    <item name="android:alertDialogTheme">?attr/dialogTheme</item>
  </style>

  <style name="ThemeOverlay.AppTheme.Dark" parent="ThemeOverlay.AppCompat.Dark">
    <item name="colorPrimary">@color/primary_text_dark</item>
    <item name="colorPrimaryDark">@color/primary_text_dark</item>
    <item name="colorAccent">@color/primary</item>
    <item name="android:colorForeground">?attr/colorPrimary</item>
    <item name="android:colorBackground">@color/primary</item>
    <item name="colorButtonNormal">@color/disabled_text_dark</item>
    <item name="colorSwitchThumbNormal">@color/primary_text_dark</item>
    <item name="colorControlNormal">@color/disabled_text_dark</item>
    <item name="colorControlHighlight">@color/primary_text_dark</item>
    <item name="android:textColor">@color/primary_text_dark</item>
  </style>

  <style name="Theme.AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">?attr/colorAccent</item>
    <item name="colorPrimary">?attr/colorPrimary</item>
    <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
  </style>

  <style name="AppTheme.Red" parent="AppTheme">
    <item name="colorPrimary">@color/primary_red</item>
    <item name="colorAccent">@color/primary_red</item>
  </style>

  <style name="AppTheme.BlueGrey" parent="AppTheme">
    <item name="colorPrimary">@color/primary_blue_grey</item>
    <item name="colorAccent">@color/primary_blue_grey</item>
  </style>

  <style name="AppTheme.Blue" parent="AppTheme">
    <item name="colorPrimary">@color/primary_blue</item>
    <item name="colorAccent">@color/primary_blue</item>
  </style>

  <style name="AppTheme.Orange" parent="AppTheme">
    <item name="colorPrimary">@color/primary_orange</item>
    <item name="colorAccent">@color/primary_orange</item>
  </style>

  <style name="AppTheme.Green" parent="AppTheme">
    <item name="colorPrimary">@color/primary_green</item>
    <item name="colorAccent">@color/primary_green</item>
  </style>
</resources>
