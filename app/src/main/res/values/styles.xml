<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="buttonStyle">@style/ColouredButton</item>
    <item name="colorAccent">@color/primary</item>
    <item name="android:textColorPrimary">@color/primary_text_light</item>
    <item name="android:textColorSecondary">@color/secondary_text_light</item>
    <item name="android:textColorTertiary">@color/disabled_text_light</item>
  </style>

  <style name="WhiteAccent" parent="Widget.Design.TextInputLayout">
    <item name="colorAccent">@android:color/white</item>
    <item name="colorControlNormal">@color/divider_dark</item>
    <item name="colorControlActivated">@android:color/white</item>
    <item name="colorControlHighlight">@android:color/white</item>
  </style>

  <!-- On pre-lollipop versions of android, the coloured button doesn't
  automatically change its text colours. -->
  <style name="ColouredButton" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/primary</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="AppTheme.Red" parent="AppTheme">
    <item name="colorPrimary">@color/primary_red</item>
    <item name="colorAccent">@color/primary_red</item>
  </style>

  <style name="AppTheme.BlueGrey" parent="AppTheme">
    <item name="colorPrimary">@color/primary_blue_grey</item>
    <item name="colorAccent">@color/primary_blue_grey</item>
  </style>

  <style name="AppTheme.Blue" parent="AppTheme">
    <item name="colorPrimary">@color/primary_blue</item>
    <item name="colorAccent">@color/primary_blue</item>
  </style>

  <style name="AppTheme.Orange" parent="AppTheme">
    <item name="colorPrimary">@color/primary_orange</item>
    <item name="colorAccent">@color/primary_orange</item>
  </style>

  <style name="AppTheme.Green" parent="AppTheme">
    <item name="colorPrimary">@color/primary_green</item>
    <item name="colorAccent">@color/primary_green</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
